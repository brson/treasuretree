<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">

    {% if base_href %}
    <base href="{{base_href}}">
    {% endif %}

    <link rel="stylesheet" href="css/style.css">

    <!-- don't ask for a favicon -->
    <link rel="shortcut icon" href="#" />

    {% block scripts %}
    {% endblock scripts %}

  </head>

  <body>

    <header>

      <section>
        <h1><a href="./">Treasure Tree</a></h1>
      </section>

      <section>
        <h2>{% block title %}{% endblock title %}</h2>
      </section>

    </header>

    {% block body %}
    {% endblock body %}

    <footer>

      <section>

        <p>Created by the committee for<br>
          Coconut <span id="heart">❤︎</span> Cocobutt</p>

      </section>

    </footer>

  </body>

</html>
